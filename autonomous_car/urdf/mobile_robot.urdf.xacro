<?xml version="1.0"?>

<robot name="mobile_robot_description" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="$(find autonomous_car)/urdf/simulation_gazebo.xacro"/>

    <!-- Main chassis of car -->
    <link name="base_link"/>
        
    <link name="car_body">
        <inertial>
            <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
            <mass value="45.0"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.09101576355" iyz="0.0" izz="0.11243841101"/>

        </inertial>
        <visual>
            <origin xyz="0.0 -0.0 0.05" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.8 0.44 0.09"/>
            </geometry>
            <material name="">
                <color rgba="1.0 0.0 0.0 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 -0.0 0.05" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.8 0.44 0.09"/>
            </geometry>
        </collision>
    </link>

    <joint name="base_joint" type="fixed">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="car_body"/>
    </joint>

    <!-- Sensors -->
     <!-- Camera -->
    <link name="camera_sensor_link">
        <collision>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
              <box size="0.05 0.05 0.05"/>
          </geometry>
        </collision>
  
        <visual>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
              <box size="0.05 0.05 0.05"/>
          </geometry>
        </visual>
  
        <inertial>
          <mass value="0" />
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0" />
        </inertial>
    </link>

    <joint name="camera_sensor_joint" type="fixed">
        <origin xyz="0.35 0.0 0.125" rpy="0.0 0.0 0.0"/>
        <parent link="car_body"/>
        <child link="camera_sensor_link"/>
        <axis xyz="0.0 0.0 0.0"/>
    </joint>

    <!-- Gyroscope -->
    <link name="IMU_sensor_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.0"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>

        </inertial>
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.05 0.05 0.05"/>
            </geometry>
            <material name="">
                <color rgba="1.0 0.0 0.0 1.0"/>
                <texture filename=""/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.05 0.05 0.05"/>
            </geometry>
        </collision>
    </link>

    <joint name="IMU_sensor_joint" type="fixed">
        <origin xyz="0.0 0.0 0.125" rpy="0.0 0.0 0.0"/>
        <parent link="car_body"/>
        <child link="IMU_sensor_link"/>
        <axis xyz="0.0 0.0 0.0"/>
        <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/>
    </joint>

    <!-- Wheels -->
    <!-- right wheel -->
    <link name="right_wheel">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.8"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>

        </inertial>
        <visual>
            <origin xyz="0.0 -0.0 0.0" rpy="1.5708 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.0975" length="0.06"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 -0.0 0.0" rpy="1.5708 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.0975" length="0.06"/>
            </geometry>
        </collision>
    </link>

    <joint name="right_wheel_joint" type="continuous">
        <origin xyz="0.35 0.25 0.03" rpy="0.0 0.0 0.0"/>
        <parent link="car_body"/>
        <child link="right_wheel"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <!-- left wheel  -->

    <link name="left_wheel">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.8"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>

        </inertial>
        <visual>
            <origin xyz="0.0 -0.0 0.0" rpy="1.5708 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.0975" length="0.06"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 -0.0 0.0" rpy="1.5708 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.0975" length="0.06"/>
            </geometry>
        </collision>
    </link>

    <joint name="left_wheel_joint" type="continuous">
        <origin xyz="0.35 -0.25 0.03" rpy="0.0 0.0 0.0"/>
        <parent link="car_body"/>
        <child link="left_wheel"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <link name="left_back_wheel">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.8"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>

        </inertial>
        <visual>
            <origin xyz="0.0 -0.0 0.0" rpy="1.5708 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.0975" length="0.06"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 -0.0 0.0" rpy="1.5708 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.0975" length="0.06"/>
            </geometry>
        </collision>
    </link>

    <joint name="left_back_wheel_joint" type="continuous">
        <origin xyz="-0.3 -0.25 0.03" rpy="0.0 0.0 0.0"/>
        <parent link="car_body"/>
        <child link="left_back_wheel"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <link name="right_back_wheel">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.8"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>

        </inertial>
        <visual>
            <origin xyz="0.0 -0.0 0.0" rpy="1.5708 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.0975" length="0.06"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 -0.0 0.0" rpy="1.5708 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.0975" length="0.06"/>
            </geometry>
        </collision>
    </link>

    <joint name="right_back_wheel_joint" type="continuous">
        <origin xyz="-0.3 0.25 0.03" rpy="0.0 0.0 0.0"/>
        <parent link="car_body"/>
        <child link="right_back_wheel"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

</robot>
